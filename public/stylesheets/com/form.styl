/*! form */

@require 'vars'
@require 'mixins'

/*
 * 1. 去除IE6/7, FF3+, S5, Chrome默认的margin
 * 2. 在不同浏览器，label与input(特别是checkbox和radio)总是不能对齐，这里统一了各个浏览器的表现
 * 3. 解决IE6/7不能继承字体样式
 */
input,button,textarea,select,label {
    margin:0;  /*1*/
    vertical-align:middle;  /*2*/
    font-size:100%;  /*3*/
    font-family: inherit; /*3*/
}

select {
    box-sizing: content-box;
}

/**
 * 1. Avoid the WebKit bug in Android 4.0.* where (2) destroys native `audio`
 *    and `video` controls.
 * 2. Correct inability to style clickable `input` types in iOS.
 * 3. Improve usability and consistency of cursor style between image-type
 *    `input` and others.
 */
button,
html input[type="button"],
input[type="reset"],
input[type="submit"] {
    -webkit-appearance: button; /* 2 */
    cursor: pointer; /* 3 */
}

/**
 * FF3/4 have !important on line-height in UA stylesheet
 * Inner spacing ie IE6/7
 */
button,
input {
    line-height: normal;
    *overflow: visible;
}

/**
 * 1. Address box sizing set to content-box in IE 8/9.
 * 2. Remove excess padding in IE 8/9.
 * 3. Remove excess padding in IE 7.
 *    Known issue: excess padding remains in IE 6.
 */
input[type="checkbox"],
input[type="radio"] {
    box-sizing: border-box; /* 1 */
    padding: 0; /* 2 */
    *height: 13px; /* 3 */
    *width: 13px; /* 3 */
}

/*
 * 去除FF3+内补丁和内边框
 */
button::-moz-focus-inner,
input::-moz-focus-inner {
    border:0;
    padding:0;
}

/*
 * 1. 让FF,S5,Chrome下的textarea只能纵向拉伸高度, 避免因拉伸而影响布局
 * 2. 去掉IE下默认的滚动条占位
 * 3. 默认textarea与文本baseline对齐，导致文本沉在下面比较难看，这里统一与文本顶对齐
 */
textarea {
    resize:vertical; /*1*/
    overflow:auto; /*2*/
    vertical-align:top; /*3*/
    min-height: 5em;
}

form {padding-top: 1px; margin-top: 1.8em;}

.input,
input[type="text"],
input[type="password"],
textarea {
    height: 26px; width: 240px;
    line-height: 26px;
    padding: 0 5px;
    border: 1px solid #B2B2B2;
    outline: 0;
    &:hover {
        border: 1px solid darken(#B2B2B2, 20%)
    }
    &:focus {
        border: 1px solid #0595D5;
    }
}
textarea {height:3em;}

input[type="text"]::-ms-clear,
input[type="password"]::-ms-reveal {
     display: none;
}

.form-item {
    padding-left: 120px;
    margin: 12px 0;
    line-height: 26px;
    min-height: 20px;
    
    .label {
        position: absolute;
        width: 115px; padding-right: 5px;
        margin-left: -120px;
        text-align: right;
    }
    .btn {margin-right:15px;}

    .n-invalid {border-color: #cc0000 !important;}
}

.btn {
    inline-block();
    padding: 0 1em; margin: 5px 0 0 0; border: 0; outline: 0;
    background: #77C7E5; color: #fff;
    min-width: 4.5em;
    border-radius: 3px;
    font-size: 18px; text-align: center; text-decoration: none; vertical-align:middle;
    line-height: 40px;
    &:hover {
        background: darken(#77C7E5, 10%); text-decoration: none;
    }
}
.btn-submit {
    @extend .btn;
    background: #0395D5;
    &:hover {
        background: darken(#0395D5, 15%);
    }
}

.btn-small {
    inline-block();
    margin: 0; padding: 0 0.8em;
    border: 1px solid #808EA5;
    line-height: 26px; text-decoration: none; text-align: center; vertical-align: middle;
    background: #DEECF4; color: #0594D5;
    filter: s("progid:DXImageTransform.Microsoft.gradient(startColorstr='#FEFEFE', endColorstr='#DEECF4')"); /*  IE */
    background: -webkit-linear-gradient(-90deg, rgba(#FEFEFE,1) 0, #DEECF4 100%); /*  WebKit */
    background: linear-gradient(180deg, rgba(#FEFEFE,1) 0, #DEECF4 100%);
    &:hover {
        background: #C5DCEB; color: #027CB3; text-decoration: none;
        filter: s("progid:DXImageTransform.Microsoft.gradient(startColorstr='#FDFDFD', endColorstr='#C5DCEB')"); /*  IE */
        background: -webkit-linear-gradient(-90deg, rgba(#FDFDFD,1) 0, #C5DCEB 100%); /*  WebKit */
        background: linear-gradient(180deg, rgba(#FDFDFD,1) 0, #C5DCEB 100%);
    }
}
.btn-disabled,disabled,.btn-small[disabled] {
    &,&:hover {
        border-color: #acacac; background: #e9e9e9; color: #797979;
    }
}

.input-group-button {
    inline-block()
    position: relative;
    width: 252px;
    .input {
        width: 60%;
        line-height: 26px;
    }
    .btn-small {
        min-width: 5em; line-height: 26px;
        position: absolute; right: 0; bottom:0; *bottom:1px;
    }
    .btn-select {
        //@extend .btn-small
        position: absolute; right: 0; bottom:0; *bottom:1px;
        padding: 0 .5em;
        height: 28px; line-height:28px;letter-spacing: 2px;
        outline: 0;
        font-size: 14px; font-family: tahoma; color: #818DA5;
        background: none; border:0; text-decoration: none;
        font-weight: 800;
        &:hover {color: #333;}
    }
}

.input-group-img {
    inline-block()
    position: relative;
    width: 252px;
}

.ui-select {
    inline-block()
    position: relative; color: #535552;
    width: 252px; height: 28px;
    input,select {display: none;}
    a {
        color: inherit;
        text-decoration: none;
        display: block; height: 26px; padding: 0 5px; line-height: 26px;
        border: 1px solid #B2B2B2;
        &:hover {
            text-decoration: none;
            border-color: darken(#B2B2B2, 20%);
            i {border-top-color: #929292;}
        }
        b {
            position: absolute; right: 10px; top: 12px;
            width: 0; height:0;
            border: 5px solid #fff;
            //border-top-width: 5px;
            border-bottom-width: 0;
            border-top-color: #B2B2B2;
        }
    }
    ul {
        display: none;
        position: absolute; z-index: 99; top: 28px;
        background #fff;
        width:100%;min-width: 100%; max-height: 24px * 10;
        box-sizing: border-box;
        border: 1px solid #57a8e4;
        box-shadow: 1px 1px 2px #a9a9a9;
    }
    li {
        height: 24px; line-height: 24px;
        padding: 0 5px; margin: 0; cursor: default;
        &:hover, &.hover,&.selected {background: #63a2f1; color: #fff;}
    }
}
.ui-select-focus {
    z-index: 9;
    a {
        border-color: #57a8e4;
        i {border-top-color: #929292;}
    }
    ul {
        display: block;
    }
}