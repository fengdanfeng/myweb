html {height:100%; overflow:hidden}
body {
    height: 100%;
    //bg("bg_main.jpg", 0 0 repeat-x #F8F9FE)
    color: #535552; background: #fff;
    font: 200 14px/1.5  "Microsoft Yahei UI Light","Microsoft Yahei",Arial;
}

a {color:#3DADDF;}
a:hover {text-decoration:underline;}

.sidebar {
    position: absolute; left: 0; top: 0; bottom: 0; z-index: 9;
    width: 192px; height: 100%;
    overflow: hidden;
    display: none;
    
    .user-bar {
        background: #0495D6; color: #fff;
        padding: 8px 0;
        text-align:center; font-size: 13px;
        i {
            inline-block()
            width: 18px; height: 18px;
            bg("avatar_d.png", no-repeat)
            vertical-align: -4px;
            margin-right: 6px;
        }
        .logout {margin-left:6px; color:#fff; cursor:pointer;}
    }
    
    .menu {
        a {
            display: block; height: 44px;
            position: relative;
            
            // background: #E5EAF0;
            // filter: s("progid:DXImageTransform.Microsoft.gradient(startColorstr='#efefef', endColorstr='#f8f8f8')"); /*  IE */
            // background: -webkit-linear-gradient(-90deg, rgba(255,255,255,1) 0, #E5EAF0 100%); /*  WebKit */
            // background: linear-gradient(180deg, rgba(255,255,255,1) 0, #E5EAF0 100%);
            bg("btn_menu.jpg", 0 0 repeat-x)
            border: 1px solid #D0D5DB;
            border-left: 0;
            margin-top: -1px;
            padding-left: 30px;
            
            color: #626262;
            font-size: 12px;
            //line-height: 44px;
            text-decoration: none;
            
            &.current {
                background: none; border-right: 0; padding-left: 24px;
                border-left: 6px solid #058ED5;
                color: #058ED5;
                font-weight: 600;
            }
            
            span {margin-left: 1em; line-height: 44px}
        }
    }
    
    .bg {
        background: #F2F3F8;
        position: absolute; left: 0; width:191px; height:100%;
        border-right: 1px solid #D0D5DB;
        margin-top: 1px; *margin-top: 0;
    }
}



.main {
    position: relative;
    min-height:490px - 7px;
    padding: 7px 15px 0 15px;
}

.app-normal {
    .sidebar {display:block;}
    .main {padding-left:215px;}
}


// 面包屑导航
.bread-crumbs {
    margin-top: 2px; margin-bottom: 1em;
    font-size: 14px; color: #434343;
    a i {margin-right:3px;}
    em {
        font-family: simsun; font-style: normal; color: #0495D5;
        padding: 0 5px;
    }
}