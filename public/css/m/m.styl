.app-footer{
    -webkit-box-flex: 0!important;
    display: -webkit-box;
    display: -moz-box;
    -moz-box-align: center;
    -webkit-box-align: center;
    width: 100%;
    .am-navbar-nav{
        width:100%;
        background-color:#000;
        ul{
            z-index:-1;
        }
        li{
            background-color:#000;
            span{
                 font-size:1.3em;
            }
            a{
                color:#fff;
               margin-top:.2em;
            }
             a.mactive{
                background-color: rgba(255, 255, 255, 0.13);
                width: 50%;
                height: 2.4em;
                border: 1px solid #191818;
                border-radius: 2em;
                display: inline-block;
                }
        }
    }
    .circleAdd{
        width: 23%;
        height: 5em;
        border-radius: 235%;
        border: .6em solid #000;
